{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "module": "commonjs",
      "target": "es6",
      "removeComments": true,
      "noImplicitAny": true,
      "outDir": "chrome/content/zotserver",
      "moduleResolution": "node",
      "typeRoots": [
        "node_modules/@types",
        "src/types"
      ],
      "types": ["node"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  